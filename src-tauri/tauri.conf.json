{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "pomo",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.github.devcanovas",
      "icon": ["icons/logo-pomo.png", "icons/logo-pomo.ico"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "width": 350,
        "height": 700,
        "skipTaskbar": true,
        "focus": true,
        "visible": false
      },
      {
        "width": 350,
        "height": 700,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "skipTaskbar": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/logo-pomo.png",
      "iconAsTemplate": true
    }
  }
}
